      "radius": 6
    },
    "forest": {
      "minCount": 4,
      "countPerTile": 0.0044444,
      "radius": 5
    },
    "mountain": {
      "minCount": 3,
      "countPerTile": 0.0022222,
      "radius": 4
    }
  },

  "rivers": {
    "minCount": 2,
    "maxCount": 4
  },

  "towns": {
    "minCount": 14,
    "perTile": 0.0014286,
    "jitterFraction": 0.4
  },
